  <script >
    document.addEventListener("DOMContentLoaded", function() {
  const GetLocation = document.getElementById("GetLoc");
  const CoordinatesIn = document.getElementById("Coordinates");


  GetLocation.addEventListener("click", function() {
    document.getElementById("spinnerContainer").style.display = "block";
    if (navigator.geolocation) {
      navigator.geolocation.getCurrentPosition(function(position) {
        const latitude = position.coords.latitude;
        const longitude = position.coords.longitude;
        const coordinates = `${latitude}, ${longitude}`;
        CoordinatesIn.value = coordinates;
        document.getElementById("spinnerContainer").style.display = "none";
        document.getElementById("locationMessage").innerHTML = "<p>Your location has been received! </p>";
      }, function(error) {
        console.error("Error getting location:", error.message);
      });
    } else {
      console.error("Location is not supported.");
    }
  });
});
  </script>
